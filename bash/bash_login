# path and shell vars
  export PATH="~/bin:/opt/local/bin:/opt/local/sbin:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/opt/local/lib/mysql5/bin:/usr/bin:$PATH:."
  export PATH="/usr/local/git/bin:$PATH"
  export PATH="/Library/PostgreSQL/8.3/bin:$PATH"
  export MANPATH="/usr/local/git/man:$MANPATH"
  export SVN_EDITOR="mate -w"
  export EDITOR="mate -w"
  export GIT_SSH="/usr/bin/ssh"
  export PS1='\[\033]0;\w\007\][`git branch 2>&1 | grep "*" | cut -c3-`] \w\\$ '


  # toot from the command line
  function tweet {
    curl -n -d status="$*" https://twitter.com/statuses/update.xml --insecure &> /dev/null
    echo "tweet'd"
  }

# misc
  alias c="cheat"
  alias a="autotest"
  alias table="ruby ~/bin/table_maker.rb"
  alias today="ruby -rdate -e 'puts((Date.today - Date.new(2008,12,31)))'"
  alias day="ruby -rdate -e 'puts((Date.today - Date.new(2009,6,12)) + 1)'"
  alias days="ruby -rdate -e '(Date.new(2009, 6, 12)..Date.today).each_with_index { |d, i| puts(%W[#{d}___#{i+1}]) }'"
  alias vimeo="ruby ~/bin/vimeo_uploader.rb"

